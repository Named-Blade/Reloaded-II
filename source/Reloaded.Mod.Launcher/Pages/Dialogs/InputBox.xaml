<default:ReloadedWindow x:Class="Reloaded.Mod.Launcher.Pages.Dialogs.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:default="clr-namespace:Reloaded.WPF.Theme.Default;assembly=Reloaded.WPF.Theme.Default"
        mc:Ignorable="d"
        MinHeight="100"
        MinWidth="300"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Style="{DynamicResource ReloadedWindow}">

    <ScrollViewer>
        <Grid Margin="{DynamicResource PanelMargin}">
            <StackPanel>
                <TextBlock TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           x:Name="PromptText"
                           Style="{DynamicResource RIIDefaultTextBlock}"
                           Margin="{DynamicResource CommonItemVerticalMargin}"/>
                
                <TextBox x:Name="InputTextBox" Margin="0,5,0,10" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="{DynamicResource MessageBoxButtonOK}" Width="80" Margin="5" Click="OkButton_Click"/>
                    <Button Content="{DynamicResource MessageBoxButtonCancel}" Width="80" Margin="5" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</default:ReloadedWindow>
